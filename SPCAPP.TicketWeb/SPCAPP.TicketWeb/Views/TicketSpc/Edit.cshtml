@model SPCAPP.TicketWeb.Models.TicketSpc

<div>
    <form method="post" asp-action="EditTicket">

        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <!--Titulo-->
                <div class="modal-header modalColor">
                    <div class="col-7">
                        <h5 id="staticBackdropLabel" class="modal-title titulo float-lg-right">TICKET SPCAA</h5>
                    </div>
                    <div class="col-5">
                        <button type="button" onclick="closeModal('#modelMike')" class="btn-close cerrar" data-mdb-dismiss="modal"
                                aria-label="Close"></button>
                    </div>
                </div>

                <div class="modal-body">
                    <!--Fecha y hora-->
                    <div class="row date">
                        <div class="col-3">
                            <div class="form-outline">
                                <input class="form-control" id="cod" asp-for="CodAux" type="number" readonly />
                                <label class="form-label" asp-for="CodAux">CÓDIGO</label>
                            </div>
                        </div>
                        <!--Fecha y hora-->
                        <div class="col-9">
                            <!--Fecha-->
                            <div class="col-5 hr2">
                                <div class="md-form hrIn">
                                    <input type="time" class="form-control clickable input-md" asp-for="HrsInicio" placeholder="HORA   &#xf107;">
                                </div>
                            </div>
                            <!--Hora-->
                            <div class="col-7">
                                <div class="form-group fecha">
                                    <input type="date" class="form-control clickable input-md" asp-for="Fecha" placeholder="FECHA  &#xf133;">
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--Form part1-->
                    <div class="row m-3 form1">
                        <div class="row">
                            <div class="col-6">
                                <div class="form-outline">
                                    <input class="form-control" id="folio" readonly />
                                    <label class="form-label" for="folio">FOLIO</label>
                                </div>
                            </div>
                            <div class="col-6">
                                <select class="form-select" asp-for="Estado" aria-label="Default select example">
                                    <option value="PENDIENTE">PENDIENTE</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-6">
                                <div class="form-outline folio">
                                    <input type="text" id="clt" asp-for="Empresa" class="form-control" />
                                    <label class="form-label" asp-for="Empresa">CLIENTE</label>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-outline">
                                    <input type="text" id="ali" class="form-control" readonly />
                                    <label class="form-label" id="aliLabel">ALIAS</label>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-6">
                                <div class="form-outline">
                                    <input type="email" id="emailEm" class="form-control" readonly />
                                    <label class="form-label">EMAIL EMPRESA</label>
                                </div>
                            </div>
                            <div class="col-6">
                                <select id="cont" class="form-select" asp-for="Contacto" aria-label="Default select example">
                                    <option selected>CONTACTO</option>
                                    CONTACTO
                                </select>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-4 form-outline" style="margin-left: 3%; margin-right: 3%;">
                                <input type="tel" asp-for="Fono_contacto" id="telefono1" class="form-control" readonly />
                                <label class="form-label" asp-for="Fono_contacto">TELÉFONO 1</label>
                            </div>
                            <div class="col-3 form-outline" style="margin-right: 3%;">
                                <input type="tel" id="telefono2" class="form-control" readonly />
                                <label class="form-label">TELÉFONO 2</label>
                            </div>
                            <div class="col-3 form-outline">
                                <input type="tel" id="telefono3" class="form-control" readonly />
                                <label class="form-label">TELÉFONO 3</label>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-5">
                                <div class="form-outline">
                                    <input type="email" asp-for="Email" id="email" class="form-control" readonly />
                                    <label class="form-label" asp-for="Email">EMAIL</label>
                                </div>
                            </div>
                            <div class="col-7">
                                <select class="form-select" asp-for="Modo" id="medioo" aria-label="Default select example">
                                </select>
                            </div>
                        </div>
                    </div>
                    <!--Form part2-->
                    <div class="row m-3 form1">
                        <div class="row mt-2">
                            <div class="col-6">
                                <select class="form-select" asp-for="Grupo" id="atrabj" aria-label="Default select example">
                                    <option value="SOLUTIONS">SOLUTIONS</option>
                                </select>
                            </div>
                            <div class="col-6">
                                <select class="form-select" asp-for="Tipo" id="supp" aria-label="Default select example">
                                </select>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-6">
                                <select class="form-select" id="asignadoo" asp-for="Tecnico" aria-label="Default select example">
                                    ASIGNADO
                                </select>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="md-form">
                                <textarea asp-for="Requerimiento" class="md-textarea form-control textareaStyle" rows="3"></textarea>
                                <label asp-for="Requerimiento">Resumen del ticket</label>
                            </div>
                        </div>
                    </div>
                    <!--Form parte 3-->
                    <!--Button para desplegar-->
                    <div class="row w-100 d-flex justify-content-center">
                        <div class="col-4">
                            <button type="button" onclick="seleccionarVista('avancesDiv')" class="btn coloAction float-lg-right">AVANCES</button>
                        </div>
                        <div class="col-3">
                            <button type="button" onclick="seleccionarVista('passwordDiv')" class="btn coloAction ml-2">CONTRASEÑAS</button>
                        </div>
                        <div class="col-5">
                            <button type="button" onclick="seleccionarVista('trbjRealizado')" class="btn coloAction float-lg-left">TRABAJO RALIZADO</button>
                        </div>
                    </div>
                    <!--Vistas para desplegar-->
                    <div class="row m-3 form1" id="contenedorVistas" style="display:none">
                        <!--AVANCES-->
                        <div class="row" id="avancesDiv" style="display:none">
                            <div class="row w-100">
                                <div class="col-2">
                                    <div class="form-check float-left">
                                        <label class="form-check-label textForm3" for="avances">AVANCES</label>
                                        <input class="form-check-input ml-4" type="checkbox" value="" id="avances" />
                                    </div>
                                </div>
                                <div class="col-10">
                                    <div class="col-6">
                                        <div class="form-check float-left">
                                            <label class="form-check-label textForm3 ml-3 mr-3" for="trjProgramado">TRABAJO PROGRAMADO</label>
                                            <input class="form-check-input" type="checkbox" value="" id="trjProgramado" />
                                        </div>
                                    </div>
                                    <div class="col-6 float-lg-right">
                                        <input type="datetime-local" id="meeting-time" name="meeting-time" class="float-lg-right">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group">
                                    <label for="avancesDesc">DESCRIPCION DE LOS AVANCES</label>
                                    <textarea class="form-control" id="avancesDesc" rows="7"></textarea>
                                </div>
                            </div>
                        </div>
                        <!--PASSWORD-->
                        <div class="row" id="passwordDiv" style="display:none">
                            <div class="form-group">
                                <textarea class="form-control" id="passwordDesc" rows="7"></textarea>
                                <label for="passwordDesc">CONTRASEÑAS Y USUARIOS USADOS</label>
                            </div>
                        </div>
                        <!--TRABAJO REALIZADO-->
                        <div class="row" id="trbjRealizado" style="display:none">
                            <!--checks-->
                            <div class="row">
                                <div class="col-6 form-check">
                                    <label class="form-check-label textForm3 ml-3 mr-3" for="trjProgramado">TRABAJO REALIZADO</label>
                                    <input class="form-check-input ml-1" type="checkbox" value="" id="trjRealizado" />
                                </div>
                                <div class="col-3 form-check">
                                    <label class="form-check-label textForm3 ml-3 mr-3" for="trjProgramado">CON OT</label>
                                    <input class="form-check-input ml-1" type="checkbox" value="" id="trjRealizado" />
                                </div>
                                <div class="col-3 form-check">
                                    <label class="form-check-label textForm3 ml-3 mr-3" for="trjProgramado">CON TW</label>
                                    <input class="form-check-input ml-1" type="checkbox" value="" id="trjRealizado" />
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-7">
                                    <div class="col-5 float-left ">
                                        <div class="row">
                                            <div class="form-outline">
                                                <input type="text" id="nOrden" class="form-control" readonly />
                                                <label class="form-label" for="nOrden">N° ORDEN</label>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <input type="date" id="dateTrabRlz" name="trip-start" />
                                        </div>
                                    </div>
                                    <div class="col-5 float-right">
                                        <div class="row">
                                            <input type="time" id="hraIni" name="appt" required>
                                        </div>
                                        <div class="row mt-3">
                                            <input type="time" id="hraTerm" name="appt2" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-5">
                                    <div class="col-5 float-lg-left">
                                        <div class="row">
                                            <div class="row">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="visitaCheckk" id="visitaCheck">
                                                    <label class="form-check-label" for="visitaCheck">
                                                        VISITA
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="row mt-3">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="remotoCheckk" id="remotoCheck">
                                                    <label class="form-check-label" for="remotoCheck">
                                                        REMOTO
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-5 float-lg-right">
                                        <div class="row float-lg-right">
                                            <div class="row">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="tallerCheckk" id="tallerCheck">
                                                    <label class="form-check-label" for="tallerCheck">
                                                        TALLER
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="row mt-3">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="telCheckk" id="telCheck">
                                                    <label class="form-check-label" for="telCheck">
                                                        TELEFONICO
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="form-group">
                                    <textarea class="form-control" id="trabaRejoDesc" rows="7"></textarea>
                                    <label for="trabaRejoDesc">DESCRIPCION DEL TRABAJO REALIZADO</label>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-3">
                                    <button type="button" onclick="" class="btn coloAction">IMAGENES</button>
                                </div>
                                <div class="col-3">
                                    <button type="button" onclick="" class="btn coloAction ml-3">GASTOS</button>
                                </div>
                                <div class="col-6">
                                    <select class="form-select float-lg-right" id="asignadoo2" aria-label="Default select example">
                                        ASIGNADO
                                    </select>
                                </div>
                            </div>
                            <div class=""></div>
                        </div>

                    </div>
                </div>
                
                <div class="modal-footer modalColor">
                    <div class="col text-center">
                        <button type="submit" class="btn btn-lg buttCreate" style="background: white;">Editar Ticket</button>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>
