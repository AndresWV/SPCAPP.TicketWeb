@model SPCAPP.TicketWeb.Models.TicketSpc

<div>
    <form method="post" asp-action="DeleteTicket">

        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <!--Titulo-->
                <div class="modal-header modalColor">
                    <div class="col-8">
                        <h5 id="staticBackdropLabel" class="modal-title titulo">TICKET SPCAA</h5>
                    </div>
                    <div class="col-4">
                        <button type="button" class="btn-close cerrar" data-mdb-dismiss="modal"
                                aria-label="Close"></button>
                    </div>
                </div>

                <div class="modal-body">
                    <!--Fecha y hora-->
                    <div class="row date">
                        <div class="col-3">
                            <div class="form-outline">
                                <input class="form-control" id="cod" asp-for="CodAux" type="number" disabled />
                                <label class="form-label" asp-for="CodAux">CÓDIGO</label>
                            </div>
                        </div>
                        <!--Fecha y hora-->
                        <div class="col-9">
                            <!--Fecha-->
                            <div class="col-5 hr2">
                                <div class="md-form hrIn">
                                    <input type="time" class="form-control clickable input-md" asp-for="HrsInicio" placeholder="HORA   &#xf107;" disabled>
                                </div>
                            </div>
                            <!--Hora-->
                            <div class="col-7">
                                <div class="form-group fecha">
                                    <input type="date" class="form-control clickable input-md" asp-for="Fecha" placeholder="FECHA  &#xf133;" disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--Form part1-->
                    <div class="row m-3 form1">
                        <div class="row">
                            <div class="col-6">
                                <div class="form-outline">
                                    <input class="form-control" id="folio" disabled />
                                    <label class="form-label" for="folio">FOLIO</label>
                                </div>
                            </div>
                            <div class="col-6">
                                <select class="form-select" asp-for="Estado" aria-label="Default select example" disabled>
                                    <option value="PENDIENTE">PENDIENTE</option>
                                    @*<option value="Terminado">TERMINADO</option>
                                        <option value="Nulo">NULO</option>*@
                                </select>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-6">
                                <div class="form-outline folio">
                                    <input type="text" id="clt" asp-for="Empresa" class="form-control" disabled/>
                                    <label class="form-label" asp-for="Empresa">CLIENTE</label>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-outline">
                                    <input type="text" id="ali" class="form-control" disabled />
                                    <label class="form-label" id="aliLabel">ALIAS</label>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-6">
                                <div class="form-outline">
                                    <input type="email" id="emailEm" class="form-control" disabled />
                                    <label class="form-label">EMAIL EMPRESA</label>
                                </div>
                            </div>
                            <div class="col-6">
                                <input type="text" id="cont" class="form-control" asp-for="Contacto" aria-label="Default select example" disabled>
                                </input>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-4 form-outline" style="margin-left: 3%; margin-right: 3%;">
                                <input type="tel" asp-for="Fono_contacto" id="telefono1" class="form-control" disabled />
                                <label class="form-label" asp-for="Fono_contacto">TELÉFONO 1</label>
                            </div>
                            <div class="col-3 form-outline" style="margin-right: 3%;">
                                <input type="tel" id="telefono2" class="form-control" disabled />
                                <label class="form-label">TELÉFONO 2</label>
                            </div>
                            <div class="col-3 form-outline">
                                <input type="tel" id="telefono3" class="form-control" disabled />
                                <label class="form-label">TELÉFONO 3</label>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-5">
                                <div class="form-outline">
                                    <input type="email" asp-for="Email" id="email" class="form-control" disabled />
                                    <label class="form-label" asp-for="Email">EMAIL</label>
                                </div>
                            </div>
                            <div class="col-7">
                                <input type="text" class="form-control" asp-for="Modo" id="medioo" aria-label="Default select example" disabled>
                                </input>
                            </div>
                        </div>
                    </div>
                    <!--Form part2-->
                    <div class="row m-3 form1">
                        <div class="row mt-2">
                            <div class="col-6">
                                <select class="form-select" asp-for="Grupo" id="atrabj" aria-label="Default select example" disabled>
                                    <option value="SOLUTIONS">SOLUTIONS</option>
                                </select>
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" asp-for="Tipo" id="supp" aria-label="Default select example" disabled>
                                </input>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-6">
                                <input type="text" class="form-control" id="asignadoo" asp-for="Tecnico" aria-label="Default select example" disabled>
                                </input>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="md-form">
                                <textarea asp-for="Requerimiento" class="md-textarea form-control textareaStyle" rows="3" disabled></textarea>
                                <label asp-for="Requerimiento">Resumen del ticket</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer modalColor">
                    <div class="col text-center">
                        <button type="submit" class="btn btn-lg buttCreate" style="background: white;">Eliminar Ticket</button>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>
@section Scripts{
    <script type="text/javascript" src="~/js/modal.js"></script>
}