@model SPCAPP.TicketWeb.Models.TicketSpc
<!--AVANCES-->
<div class="row">
    <div class="row w-100">
        <div class="col-2">
            <div class="form-check float-left">
                <label class="form-check-label textForm3" for="avances">AVANCES</label>
                <input class="form-check-input ml-4" type="checkbox" value="" id="avances" />
            </div>
        </div>
        <div class="col-10">
            <div class="col-6">
                <div class="form-check float-left">
                    <label class="form-check-label textForm3 ml-3 mr-5" for="trjProgramado">TRABAJO PROGRAMADO</label>
                    <input class="form-check-input" type="checkbox" value="" id="trjProgramado" />
                </div>
            </div>
            <div class="col-6 float-lg-right">
                <input type="datetime-local" id="meeting-time" name="meeting-time" class="float-lg-right" asp-for="FechaTrabajo">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <label for="avancesDesc">DESCRIPCION DE LOS AVANCES</label>
            <textarea class="form-control" id="avancesDesc" asp-for="Avance" rows="7"></textarea>
        </div>
    </div>
</div>
